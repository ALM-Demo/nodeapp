FROM node:12.2

ENV HOME=/home/nodeapp
RUN apt-get update && apt-get install htop
COPY package.json package-lock.json $HOME
WORKDIR $HOME
RUN npm install --silent --progress=false
COPY . $HOME
EXPOSE 8080
RUN useradd -r -u 9999 -d /dev/null -s /sbin/nologin abc 
USER 9999:9999
RUN whoami
CMD [ "node", "server.js" ]
